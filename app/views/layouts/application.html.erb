<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/flash' %>
    
    <div class="nav user">
      <p><%= link_to t('.link_project'), tests_path %></p>
      <% if user_signed_in? %>
        <p class="nav user">
          <%= t('.nav_html', name: current_user.name) %>
          <%= link_to t('.nav_logout'), destroy_user_session_path, method: :delete %>
        </p>
      <% else %>
        <p>
          <%= link_to t('.nav_login'), new_user_session_path %> <%= t('.nav_or') %> <%= link_to t('.nav_signup'), new_user_registration_path %>
        </p>
      <% end %>
    </div>


    <%= yield %>

    <%= render 'shared/footer'%>
  </body>
</html>
