<h2><%= t('.header', title: @test.title) %></h2>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th><%= t('.question') %></th>
    <th colspan="3"><%= t('.action') %></th>
  </tr>
  </thead>
  <tbody>
  <%= render 'questions' %>
  </tbody>
</table>

<p>
  <%= link_to t('.link_new_question'), new_admin_test_question_path(@test), class: 'btn btn-link' %>
</p>

<p>
  <%= link_to t('.link_back'), admin_tests_path, class: 'btn btn-primary' %>
</p>