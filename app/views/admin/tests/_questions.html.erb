<% @questions.each do |question| %>
  <tr>
    <td><%= question.body %></td>
    <td><%= link_to t('.link_view'), admin_question_path(question), class: 'btn btn-primary' %></td>
    <td><%= link_to t('.link_edit'), edit_admin_question_path(question), class: 'btn btn-info' %></td>
    <td><%= link_to t('.link_delete'),
                    admin_question_path(question), 
                    method: :delete,
                    data: { confirm: t('.delete_confirm') },
                    class: 'btn btn-danger'%></td>
  </tr>
<% end %>
